<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DAM Framework logging -->
    <logger name="com.dam.framework" level="DEBUG"/>
    
    <!-- SQL logging (set to DEBUG to see generated SQL) -->
    <logger name="com.dam.framework.sql" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
